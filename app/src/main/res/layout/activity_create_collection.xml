<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CreateCollectionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createCollectionInfo"
        android:text="Create Collection"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/collectionName"
        android:layout_below="@id/createCollectionInfo"
        android:hint="Collection name"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_collections_224"
        android:drawablePadding="10dp"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/word"
        android:layout_below="@id/collectionName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:hint="Word"
        android:layout_marginTop="245dp"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/collectionName"
        android:layout_alignParentLeft="false"
        android:id="@+id/translation"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="245dp"
        android:layout_toRightOf="@id/word"
        android:hint="Translation"
        />

    <Button
        android:id="@+id/addWordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/word"
        android:layout_centerHorizontal="true"
        android:text="Add"
        />

    <ListView
        android:id="@+id/wordList"
        android:layout_width="320dp"
        android:layout_height="248dp"
        android:layout_below="@id/addWordBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CollectionsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/collectionsInfo"
        android:text="Collections"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/browseColectionBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/collectionsInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_collections_24"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:onClick="onBrowseBtnClick"
        android:text="Browse      "
        />

    <Button
        android:id="@+id/editColectionBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/browseColectionBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_collections_24"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:onClick="onCollectionsBtnClick"
        android:text="Edit      "
        />

    <Button
        android:id="@+id/createColectionBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editColectionBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_collections_24"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:onClick="onCollectionsBtnClick"
        android:text="Create      "
        />
</RelativeLayout>